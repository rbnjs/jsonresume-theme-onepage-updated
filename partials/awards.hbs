{{#if resume.awards.length}}
<div id='awards' class="resume__section-block">
	<div class='resume__section-content'>
		<span class="resume__uppercase">AWARDS</span>
        <hr/>
		{{#each resume.awards}}
		<div>
			<span class='resume__bold'>
				{{#if title}}{{title}}{{/if}}
			</span>
			{{#if date}}
			<span class='resume__date'>
				<span class='date'>{{date}}</span>
			</span>
			{{/if}}
		</div>
		{{#if awarder}}
			<div class="awarder">{{awarder}}</div>
		{{/if}}
		{{#if summary}}
		<div>
			<p>{{summary}}</p>
		</div>
		{{/if}}
		{{#unless @last}}<div class='separator'></div>{{/unless}}
		{{/each}}
	</div>
</div>
{{/if}}
