{{#if resume.projects.length}}
<div id='projectsBlock' class="resume__section-block">
	<div class='sectionContent'>
		<span class="resume__uppercase">{{i18n "projects"}}</span>
        <hr/>
		{{#each resume.projects}}
		<div class="resume__section-content">
			<div >
                <a class='resume__bold' href="{{url}}">
					{{#if name}}{{name}}{{/if}}
				</a>
				{{#if entity}} | <span class="entity">{{entity}}</span>{{/if}}
				{{#if roles.length}} | <span class="roles">{{#each roles}}{{.}}{{#unless @last}},{{/unless}}{{/each}}</span>{{/if}}
				{{#if startDate}}
				<span class='resume__date'>
					{{#if startDate}}{{formatDate startDate}}{{/if}} - {{#if endDate}}{{formatDate
					endDate}}{{else}}Present{{/if}}
				</span>
				{{/if}}
			</div>
			{{#if description}}
			<div class="description">
				<p>{{description}}</p>
			</div>
			{{/if}}
			{{#if highlights.length}}
			<ul class='highlights'>
				{{#each highlights}}
				<li>{{.}}</li>
				{{/each}}
			</ul>
			{{/if}}
			{{#unless @last}}<div class='separator'></div>{{/unless}}
		</div>
		{{/each}}
	</div>
</div>
{{/if}}
